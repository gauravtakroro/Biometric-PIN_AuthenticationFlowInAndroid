    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="16dp">


        <Button
            android:id="@+id/btnStartAuthentication1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_authentication_using_finger_print"/>
        <Button
            android:id="@+id/btnStartAuthentication2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_authentication_using_finger_print_password_pin"/>

</androidx.appcompat.widget.LinearLayoutCompat>